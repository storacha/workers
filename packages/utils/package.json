{
  "name": "@web3-storage/worker-utils",
  "version": "0.4.1-dev",
  "description": "Cloudflare Workers Utils",
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "(Apache-2.0 OR MIT)",
  "repository": {
    "url": "web3-storage/workers",
    "directory": "packages/utils"
  },
  "type": "module",
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": "./src/index.js",
    "./cors": "./src/cors.js",
    "./router": "./src/router.js",
    "./error": "./src/error.js",
    "./response": "./src/response.js",
    "./logging": "./src/logging.js",
    "./loki": "./src/loki.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/src/*"
      ]
    }
  },
  "files": [
    "src",
    "dist/src/*.d.ts",
    "dist/src/*.d.ts.map"
  ],
  "scripts": {
    "lint": "tsc && eslint '**/*.{js,ts}' && prettier --check '**/*.{js,ts,yml,json}' --ignore-path ../../.gitignore",
    "test": "tsc && ava"
  },
  "dependencies": {
    "@web-std/fetch": "^4.1.0",
    "nanoid": "^4.0.0",
    "toucan-js": "^2.6.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@types/node": "^18.7.13",
    "ava": "^4.3.3",
    "esbuild": "^0.15.5",
    "hd-scripts": "^2.1.0",
    "itty-router": "^2.6.1",
    "miniflare": "^2.7.1",
    "sade": "^1.7.4",
    "typescript": "4.8.2",
    "wrangler": "^2.0.27"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hd-scripts/eslint/index.js"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "docs"
  ],
  "ava": {
    "ignoredByWatcher": [
      "./test/helpers/dist/*"
    ],
    "nodeArguments": [
      "--experimental-vm-modules"
    ],
    "concurrency": 1,
    "utilizeParallelBuilds": false,
    "workerThreads": false
  }
}
